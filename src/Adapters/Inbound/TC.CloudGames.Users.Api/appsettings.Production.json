{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "MessageBroker": {
    "Type": "AzureServiceBus"
  },
  "Cache": {
    "Host": "<prod-cache-host>",
    "Port": 6380,
    "Password": "<prod-cache-password>",
    "InstanceName": "TC.CloudGames.Users.Api:",
    "Secure": true
  },
  "AzureServiceBus": {
    "ConnectionString": "Endpoint=sb://<namespace>.servicebus.windows.net/;SharedAccessKeyName=<key-name>;SharedAccessKey=<key-value>",
    "TopicName": "user-events",
    "SubscriptionName": "fanout-subscription",
    "AutoProvision": true,
    "MaxDeliveryCount": 10,
    "EnableDeadLettering": true,
    "AutoPurgeOnStartup": true,
    "UseControlQueues": true
  },
  "Database": {
    "Host": "<prod-db-host>",
    "Port": 5432,
    "Name": "tc-cloudgames-users-db",
    "MaintenanceDatabase": "postgres",
    "User": "<prod-db-user>",
    "Password": "<prod-db-password>",
    "Schema": "public",
    "ConnectionTimeout": 30
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Grafana.Loki"
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "https://logs-prod-024.grafana.net",
          "credentials": {
            "username": "1267846",
            "password": "%GRAFANA_API_TOKEN%"
          }
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "TC.CloudGames.Users.Api"
    }
  }
}