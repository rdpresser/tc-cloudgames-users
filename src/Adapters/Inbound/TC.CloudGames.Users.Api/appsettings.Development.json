{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Cache": {
    "Host": "localhost",
    "Port": "6379",
    "Password": "",
    "InstanceName": "TC.CloudGames.Users.Api:"
  },
  "RabbitMq": {
    "ConnectionString": "amqp://guest:guest@localhost:5672",
    "VirtualHost": "/",
    "Exchange": "user.events",
    "AutoProvision": true,
    "Durable": true
  },
  "Database": {
    "Host": "localhost",
    "Port": "54320",
    "Name": "tc_cloudgames_user",
    "OutboxDatabase": "tc_cloudgames_user_outbox_messages",
    "MaintenanceDatabase": "postgres",
    "User": "postgres",
    "Password": "postgres"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Grafana.Loki"
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      //{
      //  "Name": "Seq",
      //  "Args": { "serverUrl": "http://tc-cloudgames-seq:5341" }
      //},
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "https://logs-prod-024.grafana.net",
          "credentials": {
            "username": "1267846",
            "password": "%GRAFANA_API_TOKEN%"
          }
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "TC.CloudGames.Users.Api"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "SecretKey": "Secret_Key_Longer_Than_32_Characters_@#$%!",
    "Issuer": "tc-cloudgames-user",
    "Audience": "tc-cloudgames-developers",
    "ExpirationInMinutes": 60
  }
}
