{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Cache": {
    "Host": "localhost",
    "Port": 56379,
    "Password": "Redis@123",
    "InstanceName": "TC.CloudGames.Users.Api:",
    "Secure": false
  },
  "MessageBroker": {
    "Type": "RabbitMQ"
  },
  "RabbitMq": {
    "Host": "localhost",
    "Port": 55672,
    "VirtualHost": "/",
    "UserName": "guest",
    "Password": "guest",
    "Exchange": "user.events",
    "AutoProvision": true,
    "Durable": true,
    "UseQuorumQueues": true,
    "AutoPurgeOnStartup": true
  },
  "AzureServiceBus": {
    "ConnectionString": "Endpoint=sb://<namespace>.servicebus.windows.net/;SharedAccessKeyName=<key-name>;SharedAccessKey=<key-value>",
    "TopicName": "user-events",
    "SubscriptionName": "default",
    "AutoProvision": true,
    "MaxDeliveryCount": 10,
    "EnableDeadLettering": true,
    "AutoPurgeOnStartup": true,
    "UseControlQueues": true
  },
  "Database": {
    "Host": "localhost",
    "Port": 65432,
    "Name": "tc-cloudgames-users-db",
    "MaintenanceDatabase": "postgres",
    "User": "postgres",
    "Password": "postgres",
    "Schema": "public"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Grafana.Loki"
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      //{
      //  "Name": "Seq",
      //  "Args": { "serverUrl": "http://tc-cloudgames-seq:5341" }
      //},
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "https://logs-prod-024.grafana.net",
          "credentials": {
            "username": "1267846",
            "password": "%GRAFANA_API_TOKEN%"
          }
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "TC.CloudGames.Users.Api"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "SecretKey": "Secret_Key_Longer_Than_32_Characters_@#$%!",
    "Issuer": "tc-cloudgames-user",
    "Audience": "tc-cloudgames-developers",
    "ExpirationInMinutes": 60
  }
}
